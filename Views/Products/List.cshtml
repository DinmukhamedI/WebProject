<div class = "container">
    <h2>Вся техника</h2>
    <h3>@Model.currCategory</h3>
    <div id="main" class="product-list ml-4">
        <div class="row">
        @{
            foreach (var product in Model.getAllProducts)
            {
                <div class="col-md-3">
                    <div class="shop card rounded-start mb-4 dropdown" style="margin-right:10px;" id="sop">
                        <div class="shop card-image">
                            <span class="percent text-center">-25%</span>
                            <img class = "img-fluid" src="@product.Img">
                        </div>
                        <div class="shop card-body text-left">
                            <div class="sh-brand m-auto">
                                <a href="#">@product.Name</a>
                            </div>
                            <br>
                            <div class="sh-price m-auto">
                            @product.Price T
                            </div>
                            <div class="sh-but mt-2">
                                <a href = "#"><button type="button" class="btn btn-success">Buy</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        </div>
    </div>
</div>